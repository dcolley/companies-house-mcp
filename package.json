{
  "name": "companies-house-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for UK Companies House API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "companies-house-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "npm run build && node dist/index.js",
    "dev:env": "set -a && source .env && set +a && npm run dev",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/integration/",
    "test:unit": "jest tests/unit/",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "clean": "rm -rf dist/",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "companies-house",
    "uk-companies",
    "api",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/companies-house-mcp.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "commander": "^14.0.0",
    "zod": "^3.25.50"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "globals": "^14.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "package.json"
  ]
}
